      - SAT_HMAC_SECRET=${SAT_HMAC_SECRET}
    ports:
      - "8082:8080"
    volumes:
      - ./templates:/templates:ro
    read_only: true
    tmpfs:
      - /tmp
    cap_drop:
      - ALL
    security_opt:
      - no-new-privileges:true
    depends_on:
      - forge_opa
      - forge_nats
    restart: unless-stopped

