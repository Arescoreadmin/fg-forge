# compose.yml (optimized dev base)
# - No version key (compose v2 ignores it)
# - Infra runs by default (so depends_on is always valid)
# - Infra ports are NOT published here (publish only via compose.expose.yml)
# - Anchors are safe (string mounts, not nested lists)
# - Fixes: duplicate keys, bad indentation, invalid YAML, storage perms, restart loops

x-service-defaults: &service_defaults
  read_only: true
  tmpfs:
    - /tmp
  cap_drop:
    - ALL
  security_opt:
    - no-new-privileges:true
  restart: unless-stopped
  networks:
    - default

# IMPORTANT: anchor as a STRING (prevents nested-list volume errors)
x-templates-mount: &templates_mount ./templates:/templates:ro

services:
  # ----------------------------
  # App services (ports published for dev convenience)
  # ----------------------------

  forge_spawn_service:
    <<: *service_defaults
    build:
      context: ./services/spawn_service
    image: forge_spawn_service:local
    container_name: forge_spawn_service
    environment:
      FORGE_ENV: dev
      BILLING_MODE: stub
      SPAWN_BASE_URL: http://localhost:8082
      REQUEST_ID_HEADER: x-request-id
      TEMPLATE_DIR: /templates
      OPA_URL: http://forge_opa:8181
      NATS_URL: nats://forge_nats:4222
      SAT_HMAC_SECRET: ${SAT_HMAC_SECRET:-}
    ports:
      - "8082:8080"
    volumes:
      - *templates_mount
    depends_on:
      forge_opa:
        condition: service_healthy
      forge_nats:
        condition: service_healthy

  forge_orchestrator:
    <<: *service_defaults
    build:
      context: ./services/orchestrator
    image: forge_orchestrator:local
    container_name: forge_orchestrator
    environment:
      FORGE_ENV: dev
      TEMPLATE_DIR: /templates
      OPA_URL: http://forge_opa:8181
      NATS_URL: nats://forge_nats:4222
      SCOREBOARD_URL: http://forge_scoreboard:8080
      LOG_LEVEL: INFO
      SAT_HMAC_SECRET: ${SAT_HMAC_SECRET:-}
      # ensure your internal endpoints work in dev (override in prod)
      ORCHESTRATOR_INTERNAL_TOKEN: ${ORCHESTRATOR_INTERNAL_TOKEN:-dev-internal}
      OPERATOR_TOKEN: ${OPERATOR_TOKEN:-dev-operator}
      SCOREBOARD_INTERNAL_TOKEN: ${SCOREBOARD_INTERNAL_TOKEN:-dev-scoreboard}
    ports:
      - "8083:8080"
    volumes:
      - *templates_mount
    depends_on:
      forge_opa:
        condition: service_healthy
      forge_nats:
        condition: service_healthy
      forge_scoreboard:
        condition: service_healthy

  forge_worker_agent:
    <<: *service_defaults
    build:
      context: ./services/worker_agent
    image: forge_worker_agent:local
    container_name: forge_worker_agent
    environment:
      FORGE_ENV: dev
      TEMPLATE_DIR: /templates
      NATS_URL: nats://forge_nats:4222
      MINIO_ENDPOINT: forge_minio:9000
      MINIO_ACCESS_KEY: ${MINIO_ROOT_USER:-forgeadmin}
      MINIO_SECRET_KEY: ${MINIO_ROOT_PASSWORD:-forgeadmin123}
      MINIO_BUCKET: forge-evidence
      LOG_LEVEL: INFO
    ports:
      - "8084:8080"
    volumes:
      - *templates_mount
    depends_on:
      forge_nats:
        condition: service_healthy
      forge_minio:
        condition: service_healthy

  forge_scoreboard:
    <<: *service_defaults
    build:
      context: ./services/scoreboard
    image: forge_scoreboard:local
    container_name: forge_scoreboard
    environment:
      FORGE_ENV: dev
      NATS_URL: nats://forge_nats:4222
      MINIO_ENDPOINT: forge_minio:9000
      MINIO_ACCESS_KEY: ${MINIO_ROOT_USER:-forgeadmin}
      MINIO_SECRET_KEY: ${MINIO_ROOT_PASSWORD:-forgeadmin123}
      MINIO_BUCKET: forge-evidence
      LOG_LEVEL: INFO
      STORAGE_ROOT: /app/storage
      # if scoreboard needs an internal token, keep it consistent with orchestrator
      SCOREBOARD_INTERNAL_TOKEN: ${SCOREBOARD_INTERNAL_TOKEN:-dev-scoreboard}
    # read_only inherited; make storage writable via volume
    volumes:
      - forge_scoreboard_storage:/app/storage
    ports:
      - "8086:8080"
    depends_on:
      forge_nats:
        condition: service_healthy
      forge_minio:
        condition: service_healthy
    healthcheck:
      test: ["CMD-SHELL", "wget -qO- http://localhost:8080/readyz >/dev/null 2>&1 || exit 1"]
      interval: 10s
      timeout: 3s
      retries: 10

  forge_observer_hub:
    <<: *service_defaults
    build:
      context: ./services/observer_hub
    image: forge_observer_hub:local
    container_name: forge_observer_hub
    environment:
      FORGE_ENV: dev
      NATS_URL: nats://forge_nats:4222
      LOKI_URL: http://forge_loki:3100
      LOG_LEVEL: INFO
    ports:
      - "8085:8080"
    depends_on:
      forge_nats:
        condition: service_healthy
      forge_loki:
        condition: service_healthy

  forge_playbook_runner:
    <<: *service_defaults
    build:
      context: ./services/playbook_runner
    image: forge_playbook_runner:local
    container_name: forge_playbook_runner
    environment:
      FORGE_ENV: dev
      TEMPLATE_DIR: /templates
      PLAYBOOK_DIR: /playbooks
      LOG_LEVEL: INFO
    ports:
      - "8087:8080"
    volumes:
      - *templates_mount
      - ./playbooks:/playbooks:ro

  forge_metrics_tuner:
    <<: *service_defaults
    build:
      context: ./services/metrics_tuner
    image: forge_metrics_tuner:local
    container_name: forge_metrics_tuner
    environment:
      FORGE_ENV: dev
      NATS_URL: nats://forge_nats:4222
      REDIS_URL: redis://forge_redis:6379
      DEFAULT_QUOTA_SCENARIOS: "10"
      DEFAULT_QUOTA_WINDOW_HOURS: "24"
      ABUSE_THRESHOLD_RATE: "5.0"
      LOG_LEVEL: INFO
    ports:
      - "8088:8088"
    depends_on:
      forge_nats:
        condition: service_healthy
      forge_redis:
        condition: service_healthy

  forge_egress_gateway:
    <<: *service_defaults
    build:
      context: ./services/egress_gateway
    image: forge_egress_gateway:local
    container_name: forge_egress_gateway
    environment:
      FORGE_ENV: dev
      NATS_URL: nats://forge_nats:4222
      DRY_RUN: "true"
      LOG_LEVEL: INFO
    ports:
      - "8089:8089"
    depends_on:
      forge_nats:
        condition: service_healthy

  forge_llm_analyzer:
    <<: *service_defaults
    build:
      context: ./services/llm_analyzer
    image: forge_llm_analyzer:local
    container_name: forge_llm_analyzer
    environment:
      FORGE_ENV: dev
      NATS_URL: nats://forge_nats:4222
      OPA_URL: http://forge_opa:8181
      REDIS_URL: redis://forge_redis:6379
      CANARY_TIMEOUT_SECONDS: "30"
      LOG_LEVEL: INFO
    ports:
      - "8090:8090"
    depends_on:
      forge_nats:
        condition: service_healthy
      forge_opa:
        condition: service_healthy
      forge_redis:
        condition: service_healthy

  forge_overlay_sanitizer:
    <<: *service_defaults
    build:
      context: ./services/overlay_sanitizer
    image: forge_overlay_sanitizer:local
    container_name: forge_overlay_sanitizer
    environment:
      FORGE_ENV: dev
      NATS_URL: nats://forge_nats:4222
      MINIO_ENDPOINT: forge_minio:9000
      MINIO_ACCESS_KEY: ${MINIO_ROOT_USER:-forgeadmin}
      MINIO_SECRET_KEY: ${MINIO_ROOT_PASSWORD:-forgeadmin123}
      MINIO_BUCKET: forge-evidence
      SANITIZED_BUCKET: forge-sanitized
      LOG_LEVEL: INFO
    ports:
      - "8091:8091"
    depends_on:
      forge_nats:
        condition: service_healthy
      forge_minio:
        condition: service_healthy

  # ----------------------------
  # Infra (always runs; no published ports here)
  # ----------------------------

  forge_opa:
    <<: *service_defaults
    image: openpolicyagent/opa:1.12.3
    container_name: forge_opa
    command: ["run", "--server", "--addr", "0.0.0.0:8181", "/policies"]
    volumes:
      - ./policies:/policies:ro
    healthcheck:
      test: ["CMD-SHELL", "wget -qO- http://localhost:8181/health >/dev/null 2>&1 || exit 1"]
      interval: 10s
      timeout: 3s
      retries: 10

  forge_redis:
    # Redis must write to /data, so keep rootfs read-only but mount /data
    <<: *service_defaults
    image: redis:7.2.4-alpine
    container_name: forge_redis
    command: ["redis-server", "--appendonly", "yes", "--maxmemory", "256mb", "--maxmemory-policy", "allkeys-lru"]
    volumes:
      - forge_redis_data:/data
    healthcheck:
      test: ["CMD-SHELL", "redis-cli ping | grep -q PONG"]
      interval: 10s
      timeout: 3s
      retries: 10

  forge_nats:
    <<: *service_defaults
    image: nats:2.10
    container_name: forge_nats
    command: ["-js", "-m", "8222"]
    healthcheck:
      test: ["CMD-SHELL", "wget -qO- http://localhost:8222/varz >/dev/null 2>&1 || exit 1"]
      interval: 10s
      timeout: 3s
      retries: 10

  forge_minio:
    # MinIO needs write access to /data; bind mounts often break due to UID/GID mismatches.
    # Use a named volume to stop permission wars.
    <<: *service_defaults
    image: minio/minio:RELEASE.2024-01-16T16-07-38Z
    container_name: forge_minio
    command: ["server", "/data", "--console-address", ":9001"]
    environment:
      MINIO_ROOT_USER: ${MINIO_ROOT_USER:-forgeadmin}
      MINIO_ROOT_PASSWORD: ${MINIO_ROOT_PASSWORD:-forgeadmin123}
    volumes:
      - ./storage/minio:/data
    healthcheck:
      test: ["CMD-SHELL", "wget -qO- http://localhost:9000/minio/health/live >/dev/null 2>&1 || exit 1"]
      interval: 10s
      timeout: 3s
      retries: 10

  forge_loki:
    # Loki needs write access; mount /loki
    <<: *service_defaults
    image: grafana/loki:2.9.4
    container_name: forge_loki
    command: ["-config.file=/etc/loki/local-config.yaml"]
    volumes:
      - forge_loki_data:/loki
    healthcheck:
      test: ["CMD-SHELL", "wget -qO- http://localhost:3100/ready >/dev/null 2>&1 || exit 1"]
      interval: 10s
      timeout: 3s
      retries: 10

  forge_prometheus:
    # Prometheus writes TSDB to /prometheus; mount it or it will eventually complain.
    <<: *service_defaults
    image: prom/prometheus:v2.49.1
    container_name: forge_prometheus
    command: ["--config.file=/etc/prometheus/prometheus.yml", "--storage.tsdb.path=/prometheus"]
    volumes:
      - ./telemetry/prometheus.yml:/etc/prometheus/prometheus.yml:ro
      - forge_prometheus_data:/prometheus

  forge_grafana:
    # Grafana writes sqlite + plugins; mount /var/lib/grafana.
    <<: *service_defaults
    image: grafana/grafana:10.3.1
    container_name: forge_grafana
    environment:
      GF_SECURITY_ADMIN_USER: ${GRAFANA_USER:-forgeadmin}
      GF_SECURITY_ADMIN_PASSWORD: ${GRAFANA_PASSWORD:-forgeadmin}
    volumes:
      - ./telemetry/grafana/provisioning:/etc/grafana/provisioning:ro
      - forge_grafana_data:/var/lib/grafana

volumes:
  forge_scoreboard_storage:
  forge_redis_data:
  forge_minio_data:
  forge_loki_data:
  forge_prometheus_data:
  forge_grafana_data:

networks:
  default:
    name: forge_platform
    driver: bridge
